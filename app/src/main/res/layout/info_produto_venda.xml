<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="13dp">


    <TextView
        android:id="@+id/txv01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Código do Produto:" />

    <TextView
        android:id="@+id/info_txv_codproduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_toEndOf="@+id/txv01"
        android:layout_toRightOf="@+id/txv01"
        android:text="0125" />

    <TextView
        android:id="@+id/txv02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv01"
        android:layout_marginTop="5dp"
        android:text="Código de barras:" />

    <TextView
        android:id="@+id/info_txv_codigobarras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_txv_codproduto"
        android:layout_alignStart="@+id/info_txv_codproduto"
        android:layout_alignTop="@+id/txv02"
        android:text="0123548575412" />

    <TextView
        android:id="@+id/txv03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv02"
        android:layout_marginTop="5dp"
        android:text="Descrição Produto:" />

    <TextView
        android:id="@+id/info_txv_descricaoproduto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_txv_codigobarras"
        android:layout_alignStart="@+id/info_txv_codigobarras"
        android:layout_alignTop="@+id/txv03"
        android:text="Coca cola 600 ml" />

    <TextView
        android:id="@+id/txv04"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv03"
        android:layout_marginTop="5dp"
        android:text="Un. Medida:" />

    <TextView
        android:id="@+id/info_txv_unmedida"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_txv_descricaoproduto"
        android:layout_alignStart="@+id/info_txv_descricaoproduto"
        android:layout_alignTop="@+id/txv04"
        android:text="LT" />

    <TextView
        android:id="@+id/txv05"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv04"
        android:layout_marginTop="5dp"
        android:text="Quantidade Estoque:" />

    <TextView
        android:id="@+id/info_txv_quantestoque"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_txv_unmedida"
        android:layout_alignStart="@+id/info_txv_unmedida"
        android:layout_alignTop="@+id/txv05"
        android:text="150" />

    <TextView
        android:id="@+id/txv06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv05"
        android:layout_marginTop="10dp"
        android:text="Preço do Produto:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/info_txv_precoproduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/info_txv_quantestoque"
        android:layout_alignStart="@+id/info_txv_quantestoque"
        android:layout_alignTop="@+id/txv06"
        android:text="3.50"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txv07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv06"
        android:layout_marginTop="27dp"
        android:text="Informe a quantidade:" />

    <EditText
        android:id="@+id/info_txt_quantidadecomprada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txv07"
        android:text="1" />





</RelativeLayout>


