<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="24dp"
        android:text="NÃºm. Pedido:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txv1"
        android:layout_alignStart="@+id/txv1"
        android:layout_below="@+id/txv1"
        android:text="Data da Venda:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView"
        android:layout_below="@+id/textView"
        android:text="Valor da Venda:"
        android:textColor="#000000"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txvVendacChave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_toEndOf="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:text="pedido"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txvDataVenda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txvVendacChave"
        android:layout_alignStart="@+id/txvVendacChave"
        android:layout_below="@+id/txvVendacChave"
        android:text="data"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txvValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txvDataVenda"
        android:layout_alignStart="@+id/txvDataVenda"
        android:layout_alignTop="@+id/textView2"
        android:text="Valor"
        android:textColor="#000000" />
</RelativeLayout>
